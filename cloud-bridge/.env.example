# BioShield IoT Bridge Configuration

# Server Configuration
PORT=3001
NODE_ENV=production

# Supabase Database (your existing database)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# ESP32 Authentication
ESP32_API_KEY=bioshield-esp32-key-2024

# CORS Configuration (add your frontend domains)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Logging
LOG_LEVEL=info
DEBUG_MODE=false
